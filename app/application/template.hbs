<h2 class="title">Pizza Party</h2>

<div class="creator-forms">
  {{engineer-creator createEngineer=(route-action "createEngineer")}}
  {{team-creator createTeam=(route-action "createTeam")}}
</div>

<h3 class="title">Free Agentz</h3>

{{team-listing team=freeAgents moveEngineer=(route-action "moveEngineer")
                               deleteEngineer=(route-action "deleteEngineer")}}

<h3 class="title">Teamz</h3>
<ul class="team-list">
  {{#each model.teams as |team|}}
    {{team-listing team=team  deleteTeam=(route-action "deleteTeam")
                              moveEngineer=(route-action "moveEngineer")
                              deleteEngineer=(route-action "deleteEngineer")}}
  {{/each}}
</ul>

{{outlet}}
